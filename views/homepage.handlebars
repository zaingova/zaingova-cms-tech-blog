<hr>

{{!-- page title --}}
<h1 style="font-size: 4rem; font-style: oblique; background: #f5e724" class="col-lg-7 mb-5 mt-5 container text-center">
  All Posts</h1>

<hr>

{{!-- loops through each post passed to handlebars from express and displays them as a card -> similar to the layout in 'dashboard.handlebars' --}}
{{#each posts as |post|}}
<div class="container p-0 card d-flex text-white bg-secondary mb-3 mt-2 col-lg-7"
  style="border-radius: 20px 20px 10px 10px; border: none">
  <div class="text-center card-header bg-dark pt-3 pb-auto" style="border-radius: 20px 20px 0 0">
    <h3>{{post.user.username}}</h3>
  </div>
  <div class="card-body text-dark pl-5">
    <form class="post-link">
      <h5 style="text-decoration:underline; font-weight: 600;" class="card-title text-white"><a
          href="/posts/{{post.id}}" value="{{post.id}}" id="post-id" class="text-white">{{post.post_title}}</a></h5>
    </form>
    <p class="card-text text-truncate text-white">{{post.post_contents}}</p>
  </div>
  <div style="font-style: oblique; color: #919191; border-radius: 0 0 10px 10px"
    class="card-footer bg-dark text-center"></div>
</div>
<hr>
{{/each}}

{{!-- uses the loadPost.js script --}}
<script src="./js/loadPost.js"></script>