{{!-- login form -> displyed as a card --}}
<section class="vh-100" style="background-color: #e7e7e7;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center" style="height: 85%;">
      <div class="col-xl-9">

        <div class="card shadow-lg mb-5" style="border-radius: 20px 20px 15px 15px; border: none">
          <div class="card-header bg-primary text-white mb-4" style="border-radius: 20px 20px 0 0; border: none">
            <h1 class="py-2 px-3">Welcome back!</h1>
          </div>

          <form class="login-form">

            <div class="card-body">
              {{!-- username field --}}
              <div class="row align-items-center pt-4 ml-5">
                <div class="col-md-2 ps-5">
                  <h6 class="mb-0 pl-3">Username</h6>
                </div>
                <div class="col-md-8 pe-5">
                  <input type="text" class="form-control form-control-lg" id="username-login" />
                </div>
              </div>

              <hr class="mx-n3">

              {{!-- password field --}}
              <div class="row align-items-center py-3 ml-5">
                <div class="col-md-2 ps-5">
                  <h6 class="mb-0 pl-3">Password</h6>
                </div>
                <div class="col-md-8 pe-5 mr-1">
                  <input type="password" class="form-control form-control-lg" id="password-login" />
                </div>
              </div>

              <hr class="mx-n3">

              {{!-- submit fied --}}
              <div class="row container">
                <div class="px-3 py-4 col-6">
                  <button type="submit" class="btn btn-primary btn-lg w-100 ml-3">Login</button>
                </div>
                <div class="px-3 py-4 col-6 text-center">
                  <button id="singup-redirect" type="submit" style="color: #0066ff !important"
                    class="btn btn-white btn-lg w-100 ml-2"><a href="/signup">Don't
                      have an
                      account?</a></button>
                </div>
              </div>

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./js/login.js"></script>