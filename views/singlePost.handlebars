<div class="container d-flex justify-content-center align-items-baseline"
  style="height:100%; margin-top: 8rem; margin-bottom: 20rem">
  {{!-- POST CARD --}}
  <div class="p-0 card shadow-lg d-flex text-white bg-secondary col-lg-12 mx-auto"
    style="border-radius: 20px 20px 20px 20px; height: auto">
    {{!-- POST USERNAME DIV --}}
    <div class="text-center card-header bg-dark pt-3 pb-auto" style="border-radius: 20px 20px 0 0;">
      <h2>{{post.user.username}}</h2>
      <p>posted on: {{format_time post.date_created}}</p>
    </div>

    {{!-- POST BODY --}}
    <div class="card-body text-dark pl-5">

      {{!-- POST TITLE + CONTENTS --}}
      <h3 style="text-decoration:underline; font-size: 3rem" class="card-title mt-3 text-center text-white mb-4 mr-5">
        {{post.post_title}}</h3>
      <p id="post_id" style="display:none">{{post.id}}</p>
      <p style="font-size: 1.2rem" class="card-text mb-4 mx-5 text-white">{{post.post_contents}}</p>

      <hr>

      {{!-- COMMENTS DIV --}}
      {{#if post.comments}}
      <h5 style="font-size: 1.6rem; margin-left: 3rem" class="mb-3 text-white"><u>Comments</u></h5>
      <div style="font-size:0.9rem; color: #696969; margin-left: 2.9rem; margin-right: 4rem;" class="comments">
        {{#each post.comments as |comment|}}
        <div style="background-color: #cccccc; padding-top: 1.2rem; padding-bottom: 0.4rem" class="pl-3">
          <section class="d-flex justify-content-start ml-auto" style="font-size: 1rem; color: #000">
            <p class="font-weight-bold font-regular">{{comment.user.username}}:</p>

            <p style="color: #cccccc">..</p>
            <p>{{comment.comment_text}}</p>
            <p id="comment_id" style="display:none">{{comment.id}}</p>
          </section>
          <p style="color: #838383">{{format_time comment.date_created}}</p>
          {{!-- {{#if comment.isOwner}}
          <button class="bg-danger text-white mb-2 px-3 py-1" id="remove-comment"
            style="border-radius: 0;">Remove</button>
          {{/if}} --}}
        </div>

        <hr>
        {{/each}}
      </div>
      {{/if}}
      {{#if logged_in}}
      <div class="post-comment" style="margin-left: 2.9rem; margin-right: 3.9rem">
        <h5 class="mb-3 text-white"><u>Post a comment!</u></h5>
        <form class="comment-submit">
          <textarea placeholder="comment-body" id="comment-field"
            style="font-size: 0.9rem; background-color: #f3f3f3; border: 1 px solid #ffffff"
            class="w-100 p-3 col-lg-12"></textarea>
          <button id="submit-comment" type="submit"
            class="btn text-light btn-primary btn-lg w-25 col-12 mt-3 justify-content-center"
            style="margin: auto; border: 1px solid #007bff71 !important">Submit</button>
        </form>
      </div>
      {{/if}}

    </div>

    {{!-- POST FOOTER - DATE_CREATED --}}
    <div style="font-style: oblique; color: #919191; border-radius: 0 0 20px 20px;"
      class="card-footer bg-dark text-center">

    </div>
  </div>
</div>

<script src="/js/postComment.js"></script>